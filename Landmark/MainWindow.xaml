<Window x:Class="Landmark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:veiwmodels="clr-namespace:Landmark.VeiwModels" 
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800" FontSize="30" FontFamily="Times New Roman"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="btn_District" Click="btn_District_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Информация по районам и достопримечательностям" Margin="10" Width="750" Height="50" FontFamily="Times New Roman"/>
            <Button Name="btn_Test" Click="btn_Test_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Тест" Margin="10" Width="750" Height="50" FontFamily="Times New Roman"/>
            <Button Content="Выйти" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Width="750" Height="50" FontFamily="Times New Roman" Name="btn_Exit" Click="btn_Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
