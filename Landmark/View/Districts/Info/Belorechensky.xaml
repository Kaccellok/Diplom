<Window x:Class="Landmark.View.Districts.Info.Belorechensky"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Landmark.View.Districts.Info"
        mc:Ignorable="d"
        Title="Белореченский район" Height="450" Width="800"  WindowStartupLocation="CenterScreen" FontFamily="Times New Roman" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition>
            </RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel >
            <UniformGrid Columns="10">
                <Button Content="🢦"
FontSize="22"
Background="Transparent"
Name="btn_GoBack" Click="btn_GoBack_Click"
/>
            </UniformGrid>
            <Image Source="/View/Districts/Info/Belorechensky.png" Height="200" Width="300" />

            <ScrollViewer Margin="10" Width="350" CanContentScroll="True">
                <StackPanel Height="160" Width="350" >

                    <Button x:Name="btn_landmarksBel1"  Margin="5" Content="Свято-Успенский храм" Width="300" Height="30" Click="btn_landmarksBel1_Click"/>
                    <Button x:Name="btn_landmarksBel2"  Margin="5" Content="Обелиск в честь основания города" Width="300" Height="30" Click="btn_landmarksBel2_Click"/>
                    <Button x:Name="btn_landmarksBel3"  Margin="5" Content="Аллея писателей" Width="300" Height="30" Click="btn_landmarksBel3_Click"/>
                    <Button x:Name="btn_landmarksBel4"  Margin="5" Content="Заезжий дом купца И.В. Иконникова" Width="300" Height="30" Click="btn_landmarksBel4_Click"/>
                    <Button x:Name="btn_landmarksBel5"  Margin="5" Content="Торговый дом казака Губанова" Width="300" Height="30" Click="btn_landmarksBel5_Click"/>
                    <Button x:Name="btn_landmarksBel6"  Margin="5" Content="Свято-Покровский храм" Width="300" Height="30" Click="btn_landmarksBel6_Click"/>


                </StackPanel>
            </ScrollViewer>
        </StackPanel>

        <ScrollViewer Grid.Column="1" Margin="0,10,0,10">
            <TextBlock  x:Name="tbDescDistrict" TextWrapping="Wrap" FontSize="18"><Run Text="Дата образования: 2 июня 1924 года"/><LineBreak/><Run Text="Население: 105 803 чел. (2023 г.)"/><LineBreak/><Run Text="Телефонный код: 86155"/><LineBreak/><Run Text="Площадь: 1 326 км²"/><LineBreak/><Run Text="Где находится: Краснодарский край"/><LineBreak/><Run/><LineBreak/><Run Text="Белореченский район был образован 2 июня 1924 года в составе Майкопского округа Юго-Восточной области."/><LineBreak/><Run Text="В его состав вошли территории упразднённых Белореченской, Бжедуховской, Великой, Гурийской, Пшехской и Рязанской волостей Майкопского отдела Кубано-Черноморской области."/><LineBreak/><Run Text="Изначально район состоял из 12 сельских советов."/><LineBreak/><Run Text="С 16 ноября 1924 года район находился в составе Северо-Кавказского края, с 10 января 1934 года — в составе Азово-Черноморского края, с 13 сентября 1937 года — в составе Краснодарского края."/><LineBreak/><Run Text="В 1993 году была прекращена деятельность сельских Советов, территории сельских администраций преобразованы в сельские округа."/><LineBreak/><Run Text="В 2005 году в районе были ликвидированы администрации сельских округов и образованы 11 муниципальных образований, включая город Белореченск"/></TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
