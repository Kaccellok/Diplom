        mc:Ignorable="d"
        Title="Кущевской район" Height="450" Width="800" WindowStartupLocation="CenterScreen" FontFamily="Times New Roman" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            </ColumnDefinition>
