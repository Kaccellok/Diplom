<Window x:Class="Landmark.View.Landmarks.Labinsky.Lab2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Landmark.View.Landmarks.Labinsky"
        mc:Ignorable="d"
        Title="Дом жилой атамана Бобрышева" Height="450" Width="800" ResizeMode="NoResize" FontFamily="Times New Roman" FontSize="18" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="5">
                <UniformGrid Columns="10">
                    <Button Content="🢦"
FontSize="22"
Background="Transparent"
Name="btn_GoBack"
Click="btn_GoBack_Click"/>
                </UniformGrid>
                <Image Source="/View/Landmarks/Labinsky/dom.jpg" MaxWidth="600" Width="432" Margin="5" Height="322" />
                <TextBlock TextWrapping="WrapWithOverflow"><Run Text="Жилой особняк атамана Бобрышева — памятник архитектуры в Лабинске, построенный им в 1910 году."/><LineBreak/><Run Text="Здание отражает боевой дух казачества, напоминая крепость, с которой начинался город. Угол особняка оформлен круглой башней с конусовидной кровлей."/></TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
