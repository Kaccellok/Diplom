<Window x:Class="Landmark.View.Landmarks.Labinsky.Lab3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Landmark.View.Landmarks.Labinsky"
        mc:Ignorable="d"
        Title="Памятник казакам" Height="450" Width="800" ResizeMode="NoResize" FontFamily="Times New Roman" FontSize="18" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="5">
                <UniformGrid Columns="10">
                    <Button Content="🢦"
FontSize="22"
Background="Transparent"
Name="btn_GoBack"
Click="btn_GoBack_Click"/>
                </UniformGrid>
                <Image Source="/View/Landmarks/Labinsky/kaz.jpg" MaxWidth="600" Width="357" Margin="5" Height="342" />
                <TextBlock TextWrapping="WrapWithOverflow" Text="Памятник казакам установлен в 1912 году в честь павших в сражениях во время Кавказской и Русско-турецких войн. Первоначально установлен на центральной площади при атамане А.С. Алименьеве. В 1991 году к 150-летию города Лабинска памятник был восстановлен в городском парке."/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
