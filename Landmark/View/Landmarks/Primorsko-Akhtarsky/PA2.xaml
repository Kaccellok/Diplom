<Window x:Class="Landmark.View.Landmarks.Primorsko_Akhtarsky.PA2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Landmark.View.Landmarks.Primorsko_Akhtarsky"
        mc:Ignorable="d"
        Title="Бункер штаба Азовской военной флотилии" Height="450" Width="800" ResizeMode="NoResize" FontFamily="Times New Roman" FontSize="18" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="5">
                <UniformGrid Columns="10">
                    <Button Content="🢦"
FontSize="22"
Background="Transparent"
Name="btn_GoBack"
Click="btn_GoBack_Click"/>
                </UniformGrid>
                <Image Source="/View/Landmarks/Primorsko-Akhtarsky/bunker-shtaba-azovskoy-voennoy-flotilii.jpg" MaxWidth="600" Width="486" Margin="5" Height="287" />
                <TextBlock TextWrapping="WrapWithOverflow" Text="В 1941 году в Приморско-Ахтарске был построен военный бункер, где находился штаб Азовской флотилии. Командовал им контр-адмирал С.Г. Горшков. Здание убежища сохранилось. Сегодня оно находится по соседству со школой №2. На фасаде установлена памятная плита с исторической справкой."/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
