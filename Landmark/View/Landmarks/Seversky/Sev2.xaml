<Window x:Class="Landmark.View.Landmarks.Seversky.Sev2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Landmark.View.Landmarks.Seversky"
        mc:Ignorable="d"
        Title="Ильская стоянка древнего человека" Height="450" Width="800" ResizeMode="NoResize" FontFamily="Times New Roman" FontSize="18" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="5">
                <UniformGrid Columns="10">
                    <Button Content="🢦"
FontSize="22"
Background="Transparent"
Name="btn_GoBack"
Click="btn_GoBack_Click"/>
                </UniformGrid>
                <Image Source="/View/Landmarks/Seversky/stoy.jpg" MaxWidth="600" Width="560" Margin="5" Height="233" />
                <TextBlock TextWrapping="WrapWithOverflow" Text="Ильская стоянка древнего человека — всемирно известный памятник археологии. Место обитания первобытного человека эпохи среднего палеолита. Стоянка имеет 7 культурных слоев и считается одной из самых древних палеолитических стоянок в Восточной Европе. Расположена на левом берегу реки Иль у южной окраины посёлка Ильский."/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
